mixin pratchettHeader
  include compass.pug
  include icons.pug
  .pratchett-header
    +bigWave(1)
    +smallWave(1)
    +reversiveSmallWave(2)
    +reversiveBigWave(2)

    .pratchett-header__stars
      -var stars = [ 16, 16, 9, 9, 16, 9, 16, 9, 16, 16, 16, 16 ];
      -var i = 0
      while i < 12
        svg.sky-star(data-star=(i+1) width=stars[i] height=stars[i]): use(xlink:href="#star-icon")
        -i++

    h1.pratchett-header__strip.text-center
      img(src=imgUrl+'title.svg' width="1190" height="216")
    .pratchett-header__world.text-center
      .turtle

        .flags
          for block in flags
            .flags__block(data-area=block.id)
              -var i = 1
              while i <= block.length
                .flag(data-index=i data-cycle=block.id data-cycle-item)
                  svg.flag-icon: use(xlink:href="#flag-icon")
                  -i++
        
          +compass

